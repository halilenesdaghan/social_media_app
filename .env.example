# Uygulama Yapılandırması
FLASK_APP=run.py
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your_secret_key_here
API_PREFIX=/api

# AWS Yapılandırması
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=eu-central-1

# DynamoDB Yapılandırması
DYNAMODB_HOST=http://localhost:8000  # Yerel geliştirme için
DYNAMODB_ENDPOINT=http://localhost:8000  # Yerel geliştirme için
# DYNAMODB_ENDPOINT=  # AWS DynamoDB için boş bırakın

# JWT Yapılandırması
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 saat (saniye cinsinden)

# S3 Yapılandırması (Medya)
S3_BUCKET_NAME=your-social-media-uploads
S3_REGION=eu-central-1
S3_URL=https://your-bucket-name.s3.amazonaws.com/

# Redis Yapılandırması (Cache)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO